        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // 0. Make sure we have key fields
    if (!current.sprint || !current.submitted_by)
        return;

    // 1. Check that sprint is valid and in a state where retro is allowed
    var sprintGr = current.sprint.getRefRecord();
    if (!sprintGr.isValidRecord()) {
        gs.addErrorMessage('Selected sprint is not valid.');
        current.setAbortAction(true);
        return;
    }

    // Adjust the allowed state(s) as per your process
    // e.g. only allow when sprint.state = 'ready_for_submission'
    if (sprintGr.state != 'ready_for_submission') {
        gs.addErrorMessage('Retrospectives can only be submitted when the sprint is Ready for Retro Submission.');
        current.setAbortAction(true);
        return;
    }

    // 2. Check for duplicate retro: one per sprint per employee
    var dup = new GlideRecord('x_1865669_retrospe_retrospective_submission');
    dup.addQuery('sprint', current.sprint);
    dup.addQuery('submitted_by', current.submitted_by);

    // If you later also run this rule on update, ignore the current record
    if (!current.isNewRecord())
        dup.addQuery('sys_id', '!=', current.sys_id);

    dup.setLimit(1);
    dup.query();

    if (dup.hasNext()) {
        gs.addErrorMessage('You can submit only one retrospective per sprint.');
        current.setAbortAction(true);
        return;
    }

})(current, previous);]]></script>
