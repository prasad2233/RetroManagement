        <script_true><![CDATA[function onCondition() {
    var isManager = g_user.hasRole('x_1865669_retrospe.manager') ||
                    g_user.hasRole('x_1865669_retrospe.admin');

    // List of advanced fields that should be manager-only.
    // Remove any that do not exist on your form; add any custom fields you create.
    var advancedFields = [
        'priority',          // standard task field
        'due_date',          // or 'expected_end' if you use that
        'sprint',            // custom: x_1865669_retrospe_sprint
        'retro_submission',  // custom: x_1865669_retrospe_retrospective_submission
        // 'impact',         // uncomment if you add an impact field
        // 'risk',           // uncomment if you add a risk field
        // 'target_sprint'   // example custom field
    ];

    for (var i = 0; i < advancedFields.length; i++) {
        var field = advancedFields[i];

        // Always show the field on the form
        g_form.setDisplay(field, true);

        if (isManager) {
            // Managers/Admins: editable
            g_form.setReadOnly(field, false);
        } else {
            // Employees: read-only (can also hide if you prefer)
            g_form.setReadOnly(field, true);

            // If you want to hide instead of just read-only, uncomment:
            // g_form.setDisplay(field, false);
        }
    }
}]]></script_true>
