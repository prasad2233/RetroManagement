        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Extra guard: if existing record and neither sprint nor submitted_by changed, skip
    if (!current.isNewRecord() &&
        !current.sprint.changes() &&
        !current.submitted_by.changes()) {
        return;
    }

    // Only run if we have both sprint and submitted_by
    if (current.sprint.nil() || current.submitted_by.nil()) {
        return;
    }

    // Look for another submission for the same sprint and user
    var retroGR = new GlideRecord('x_1865669_retrospe_retrospective_submission');
    retroGR.addQuery('sprint', current.sprint);
    retroGR.addQuery('submitted_by', current.submitted_by);

    // Exclude the current record on update
    if (!current.isNewRecord()) {
        retroGR.addQuery('sys_id', '!=', current.sys_id);
    }

    retroGR.setLimit(1);
    retroGR.query();

    if (retroGR.hasNext()) {
        gs.addErrorMessage('You have already submitted a retrospective for this sprint.');
        current.setAbortAction(true);
        return;
    }

})(current, previous);]]></script>
