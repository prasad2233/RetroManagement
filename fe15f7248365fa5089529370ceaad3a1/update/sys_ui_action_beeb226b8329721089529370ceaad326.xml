        <name>Mark as Valid</name>
        <onclick/>
        <order>200</order>
        <script><![CDATA[(function () {
    
    // Check if current record exists
    if (!current || !current.sys_id) {
        gs.addErrorMessage('No record selected.');
        return;
    }
    
    // Refresh current record to ensure we have latest data
    var gr = new GlideRecord('x_1865669_retrospe_retrospective_submission');
    if (!gr.get(current.sys_id)) {
        gs.addErrorMessage('Record not found.');
        return;
    }
    
    // Safety check â€“ only allow from submitted
    if (gr.getValue('status') != 'submitted') {
        gs.addErrorMessage('Only submitted retros can be marked as valid.');
        action.setRedirectURL(gr);
        return;
    }
    
    // Update status
    gr.setValue('status', 'valid');
    gr.setValue('reviewed_by', gs.getUserID());
    gr.setValue('reviewed_date', new GlideDateTime());
    gr.update();
    
    gs.addInfoMessage('Retrospective marked as Valid.');
    action.setRedirectURL(gr);
    
})();]]></script>
