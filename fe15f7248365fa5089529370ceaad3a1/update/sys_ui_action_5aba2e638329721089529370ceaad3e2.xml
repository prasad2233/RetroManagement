        <onclick/>
        <order>220</order>
        <script><![CDATA[(function () {

    // Only cancel Pending or In Progress
    if (current.state != 100 && current.state != 200) {
        gs.addErrorMessage('Only pending or in-progress tasks can be cancelled.');
        action.setRedirectURL(current);
        return;
    }

    current.state = 400; // Cancelled
    current.update();

    gs.addInfoMessage('Task has been cancelled.');
    action.setRedirectURL(current);

