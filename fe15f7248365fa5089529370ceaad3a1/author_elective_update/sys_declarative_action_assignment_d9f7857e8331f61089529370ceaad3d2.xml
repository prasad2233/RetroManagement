        <client_script><![CDATA[function onClick() {
    var checked = g_list.getChecked();

    if (!checked) {
        alert('Please select at least one retrospective.');
        return false;
    }

    var ids = checked.split(',');
    var successCount = 0;
    var errorCount = 0;
    var remaining = ids.length;

    for (var i = 0; i < ids.length; i++) {
        callMarkAsValid(ids[i]);
    }

    function callMarkAsValid(sysId) {
        var ga = new GlideAjax('x_1865669_retrospe.RetroManagementAjax');
        ga.addParam('sysparm_name', 'markAsValid');
        ga.addParam('sysparm_sys_id', sysId);

        ga.getXMLAnswer(function(answer) {
            remaining--;

            if (answer && answer.indexOf('success') === 0) {
                successCount++;
            } else {
                errorCount++;
            }

            if (remaining === 0) {
                if (successCount > 0) {
                    alert(successCount + ' retrospective(s) marked as Valid.');
                }
                if (errorCount > 0) {
                    alert(errorCount + ' retrospective(s) could not be updated.');
                }
                g_list.refresh();
            }
        });
    }

    return false;
}]]></client_script>
