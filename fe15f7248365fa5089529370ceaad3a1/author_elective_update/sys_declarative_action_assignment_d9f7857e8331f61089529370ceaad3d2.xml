        <server_script><![CDATA[(function execute(inputs, outputs) {
    gs.info('[Retro Mark Valid] Action started');

    var sysId = inputs.sys_id;
    gs.info('[Retro Mark Valid] Input sys_id: ' + sysId);

    if (!sysId) {
        outputs.success = false;
        outputs.message = 'No record ID provided.';
        gs.warn('[Retro Mark Valid] No sys_id in inputs');
        return;
    }

    var gr = new GlideRecord('x_1865669_retrospe_retrospective_submission');
    if (!gr.get(sysId)) {
        outputs.success = false;
        outputs.message = 'Record not found.';
        gs.warn('[Retro Mark Valid] Retro not found for sys_id: ' + sysId);
        return;
    }

    var status = gr.getValue('status');
    gs.info('[Retro Mark Valid] Current status for ' + sysId + ' = ' + status);

    // Check status
    if (status != 'submitted') {
        outputs.success = false;
        outputs.message = 'Only submitted retros can be marked as valid.';
        gs.warn('[Retro Mark Valid] Record ' + sysId + ' not in submitted status (status=' + status + ')');
        return;
    }

    var reviewer = gs.getUserID();
    var now = new GlideDateTime();
    gs.info('[Retro Mark Valid] Marking ' + sysId + ' as valid by user ' + reviewer + ' at ' + now.getDisplayValue());

    // Update record
    gr.setValue('status', 'valid');
    gr.setValue('reviewed_by', reviewer);
    gr.setValue('reviewed_date', now);
    gr.update();

    outputs.success = true;
    outputs.message = 'Retrospective marked as Valid.';
    gs.info('[Retro Mark Valid] Successfully updated retro ' + sysId);

})(inputs, outputs);]]></server_script>
