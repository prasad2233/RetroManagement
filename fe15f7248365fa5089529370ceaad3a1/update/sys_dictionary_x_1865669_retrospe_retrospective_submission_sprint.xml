        <calculation><![CDATA[(function calculatedFieldValue(current) {

    // 1) Find teams for current user
    var userTeams = [];
    var m2m = new GlideRecord('x_1865669_retrospe_team_member'); // your membership table
    m2m.addQuery('user', gs.getUserID());
    m2m.addActiveQuery(); // remove if no 'active' field
    m2m.query();

    while (m2m.next()) {
        userTeams.push(m2m.team.toString());
    }

    if (userTeams.length === 0)
        return ''; // user not in any team

    // 2) Find a sprint for those teams that is ready for retro
    var sprint = new GlideRecord('x_1865669_retrospe_sprint');
    sprint.addQuery('team', 'IN', userTeams.join(','));
    sprint.addQuery('state', 'ready_for_submission');
    sprint.setLimit(1);
    sprint.query();
	

    if (sprint.next()) {
		gs.info("sprint is "+sprint.getUniqueValue());
        return sprint.getUniqueValue(); // sys_id of sprint
    }

    return '';
    
})(current);]]></calculation>
